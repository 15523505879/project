.page-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-top: env(safe-area-inset-top);
  background: #f5f5f5;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

.rank-header {
  padding: 20rpx 30rpx;
  background: #fff;
  position: relative;
  z-index: 1;
}

.rank-list {
  flex: 1;
  position: relative;
  box-sizing: border-box;
  padding: 30rpx;
  margin-bottom: calc(80rpx + env(safe-area-inset-bottom));
}

.rank-list-scroll {
  width: 100%;
}

.rank-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.rank-item:last-child {
  margin-bottom: 0;
}

.list-footer {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
} 